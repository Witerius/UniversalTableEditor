<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:theme="@style/AppTheme.NoActionBar"
    tools:context="com.wizardmb.witerius.universaltableeditor.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/editing_table"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/editing_tables"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <Button
            android:id="@+id/editing_templates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editing_table"
            android:layout_marginTop="30dp"
            android:layout_alignEnd="@+id/editing_table"
            android:layout_alignLeft="@+id/editing_table"
            android:layout_alignRight="@+id/editing_table"
            android:layout_alignStart="@+id/editing_table"
            android:text="@string/editing_templates"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/export_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editing_templates"
            android:layout_alignLeft="@+id/editing_table"
            android:layout_alignRight="@+id/editing_templates"
            android:layout_alignStart="@+id/editing_table"
            android:layout_below="@+id/editing_templates"
            android:layout_marginTop="30dp"
            android:text="@string/export_table"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/export_import"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editing_templates"
            android:layout_alignLeft="@+id/editing_table"
            android:layout_alignRight="@+id/editing_templates"
            android:layout_alignStart="@+id/editing_table"
            android:layout_below="@+id/export_xml"
            android:layout_marginTop="30dp"
            android:text="@string/export_import_sample"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>
</FrameLayout>

